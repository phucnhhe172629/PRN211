@{

}
<div class="text-center">
    <h1 class="display-4">Login EStore</h1>
    <form asp-controller="Login" asp-action="CheckLogin">
        <div class="form-group">
            Email <input type="text" name="email" />
        </div>
        <div class="form-group">
            Password <input type="text" name="password" />
        </div>
        <div class="form-group">
            <input type="submit" value="Login" />
        </div>
    </form>
</div>

<div>

@if ((string)ViewBag.Error != null)
{
   <p> @Html.Label((string)ViewBag.Error) </p>
}
</div>