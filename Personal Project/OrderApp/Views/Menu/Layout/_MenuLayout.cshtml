@{
    Layout = null;
}
<!doctype html>
<html lang="en-gb" class="no-js">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - OrderApp</title>

    <link rel="stylesheet" href="../menu/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="../menu/css/isotope.css" media="screen" />
    <link rel="stylesheet" href="../menu/js/fancybox/jquery.fancybox.css" type="text/css" media="screen" />
    <link href="../menu/css/animate.css" rel="stylesheet" media="screen">
    <link href="../menu/flexslider/flexslider.css" rel="stylesheet" />
    <link href="../menu/js/owl-carousel/owl.carousel.css" rel="stylesheet">
    <link rel="stylesheet" href="../menu/css/styles.css" />

    <link href="../menu/font/css/font-awesome.min.css" rel="stylesheet">
</head>

<body>
    <header class="header" style="position: sticky">
        <div class="container">
            <nav class="navbar navbar-inverse" role="navigation">
                <div class="navbar-header">
                    <button type="button" id="nav-toggle" class="navbar-toggle" data-toggle="collapse" data-target="#main-nav"> <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
                    <a href="#" class="navbar-brand scroll-top logo  animated bounceInLeft"><b><i>Gentle    Restaurant</i></b></a>
                </div>
                <!--/.navbar-header-->
                <div id="main-nav" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav" id="mainNav">
                        <li><a href="Menu?bid=@ViewBag.BillId" class="scroll-link">Menu</a></li>
                        <li><a href="Order?bid=@ViewBag.BillId" class="scroll-link">Order</a></li>
                        <li><a href="About" class="scroll-link">About Us</a></li>
                        <li>
                            <a class="scroll-link" asp-controller="Menu" asp-action="Logout">Logout</a>
                        </li>
                    </ul>
                </div>
                <!--/.navbar-collapse-->
            </nav>
            <!--/.navbar-->
        </div>
        <!--/.container-->
    </header>
    <!--/.header-->
    @RenderBody()

    <!--[if lte IE 8]><script src="../menu///ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script><![endif]-->
    <script src="../menu/js/modernizr-latest.js"></script>
    <script src="../menu/js/jquery-1.8.2.min.js" type="text/javascript"></script>
    <script src="../menu/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="../menu/js/jquery.isotope.min.js" type="text/javascript"></script>
    <script src="../menu/js/fancybox/jquery.fancybox.pack.js" type="text/javascript"></script>
    <script src="../menu/js/jquery.nav.js" type="text/javascript"></script>
    <script src="../menu/js/maps.js" type="text/javascript"></script>
    <script src="../menu/js/gmaps.js"></script>
    <script src="../menu/js/jquery.fittext.js"></script>
    <script src="../menu/js/waypoints.js"></script>
    <script src="../menu/flexslider/jquery.flexslider.js"></script>
    <script src="../menu/contact/jqBootstrapValidation.js"></script>
    <script src="../menu/contact/contact_me.js"></script>
    <script src="../menu/js/custom.js" type="text/javascript"></script>
    <script src="../menu/js/owl-carousel/owl.carousel.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
